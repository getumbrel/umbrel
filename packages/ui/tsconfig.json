{
	"compilerOptions": {
		"strict": true,
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",

		/* Import from root */
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			// TODO: Remove once monorepo uses npm workspaces. Without workspaces, npm installs
			// separate @trpc/server copies in ui/ and umbreld/, causing TypeScript to treat
			// identical types as incompatible. This forces resolution to ui's copy.
			"@trpc/server": ["./node_modules/@trpc/server"],
			"@trpc/server/*": ["./node_modules/@trpc/server/*"]
		},
		"plugins": [
			{
				"name": "ts-plugin-sort-import-suggestions",
				// Matches `@/`, `../` and `./`, move them up in the suggestions (This is the default config if you leave it empty)
				"moveUpPatterns": ["@/", "\\.{1,2}/"],
				// Move `dist` down in the suggestions, by deafult it's `[]`
				"moveDownPatterns": ["dist"]
			}
		]
	},
	"include": ["src", "app-auth", "tailwind.config.ts"],
	/* Exclude parent */
	// "exclude": ["../"],
	"references": [{"path": "./tsconfig.node.json"}]
}
